{{#if resume.education.length}}
<div class="container mb-8">
    {{> title value="Education"}}

    {{#each resume.education}}
    <section class="mb-6 last:mb-0">
        {{> section-header name=this.institution}} 
        
        <div class="flex justify-between flex-wrap mb-2 gap-2">
            <h4 class="text-sm font-medium text-gray-900">{{#if studyType}}{{studyType}}{{/if}}{{#if area}}{{#if studyType}} in {{/if}}{{area}}{{/if}}</h4>
            <h4 class="text-sm text-gray-600 whitespace-nowrap">
                {{formatDate startDate}}{{#if endDate}} — {{formatDate endDate}}{{else}} — Present{{/if}}
            </h4>
        </div>

        {{#if gpa}}
        <h5 class="text-xs text-gray-600 mb-2">GPA: {{gpa}}</h5>
        {{/if}}
        
        {{#if courses.length}}
        <div class="mt-3">
            <h5 class="text-xs font-semibold text-gray-700 mb-2">Relevant Coursework:</h5>
            <ul class="list-none space-y-1">
                {{#each courses}}
                <li class="text-xs text-gray-600">• {{.}}</li>
                {{/each}}
            </ul>
        </div>
        {{/if}}
    </section>
    {{/each}}
</div>
{{/if}}
