{{#if network}}
    {{#if username}}
        {{#if (eq (lowercase network) "linkedin")}}
            {{> info-tag text=this.username name=network icon="fa-linkedin-square" url=this.url}}
        {{else if (eq (lowercase network) "github")}}
            {{> info-tag text=this.username name=network icon="fa-github" url=this.url}}
        {{else if (eq (lowercase network) "twitter")}}
            {{> info-tag text=this.username name=network icon="fa-twitter" url=this.url}}
        {{else if (eq (lowercase network) "facebook")}}
            {{> info-tag text=this.username name=network icon="fa-facebook" url=this.url}}
        {{else}}
            {{> info-tag text=this.username name=network icon="fa-user" url=this.url}}
        {{/if}}
    {{/if}}
{{/if}}
