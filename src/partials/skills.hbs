{{#if resume.skills.length}}
<div class="container skills-container">
    {{#each resume.skills}}
        <section class="mb-4">
            {{#if name}}
                {{> title value=name}}
            {{/if}}
            {{#if level}}
                <h5 class="text-xs text-gray-600 capitalize mb-2">{{level}}</h5>
            {{/if}}
            {{#if keywords.length}}
                <div class="flex flex-wrap gap-1">
                    {{#each keywords}}
                        <span class="inline-block text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded border border-gray-200">{{.}}</span>
                    {{/each}}
                </div>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}
